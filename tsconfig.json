{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/custom-types"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
